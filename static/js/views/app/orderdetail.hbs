<nav class="header-nav clearfix">
    {{lang.H5_ORDER}}
</nav>
<section class="order-state">
    <p>{{lang.H5_ORDER_STATUS}}:{{data.order.state_txt}}</p>
    <p>
        <a href="{{hrefUrl}}ordersuccess.php?price={{data.order.total_price}}&detail=1" class="">
            <i class="icon iconfont fr icon-go-font"></i>{{lang.H5_CHECK_ACCOUNT_RECEIVABLES}}:
        </a>
    </p>
    {{#eq data.order.ship_status 1}}
    <div class="logistics-info">
        <a href="{{hrefUrl}}logistics.php?order_id={{data.order.id_hash}}&logistics_id={{data.order.express_info_id}}" class="clearfix">
            <i class="icon iconfont fr icon-go-font"></i>
            <p>{{data.order.logistics_info.last_checkpoint.message}}{{#empty data.order.logistics_info.last_checkpoint.message}}{{lang.H5_NO_LOGISTICS_UPDATE}}{{/empty}}</p>
            <p>{{data.order.logistics_info.express.title}} {{data.order.logistics_info.express.express_no}}</p>
        </a>
    </div>
    {{/eq}}
</section>
<section class="user-info-box">
    <div class="address-box">
        <div class="clearfix user-info">
            <span class="fr">{{data.order.buyer_telephone}}</span>
            <i class="icon iconfont fr icon-phone-font"></i>
            <i class="icon iconfont fl icon-address-font"></i>
            <span class="fl">{{data.order.buyer_name}}</span>
        </div>
        <div class="user-address-info">
            <div class="address-info">
                {{data.order.buyer_address.street}},{{data.order.buyer_address.country}},{{data.order.buyer_address.city}},{{data.order.buyer_address.province}}
            </div>
            {{#nempty data.order.logistics_info.express_buyer.title}}
                <div>{{lang.H5_LOGISTICS_COMPANY}}:{{data.order.logistics_info.express_buyer.title}}</div>
            {{/nempty}}
        </div>
    </div>
</section>
{{#if data.order.buyer_note}}
    <section class="buyer-note">
        {{lang.H5_BUYER_NOTE}} : {{data.order.buyer_note}}
    </section>
{{/if}}

<section class="">
    <div class="list-box">
        <ul class="order-items">
            {{#each data.order.items}}
            <li class="clearfix cart-item">
                <img src="{{img_head}}">
                <div class="">
                    <p class="name">{{item_title}}</p>
                    {{#if item_sku_title}}
                        <p class="type">{{../../lang.H5_ITEM_SKU}}:{{item_sku_title}}</p>
                    {{/if}}
                    <p class="num">{{../lang.H5_QUANTITY}}:{{quantity}}</p>
                    <p class="price clearfix">{{#if discount.value}}<span class="fr">-{{transpricevalue discount.value}}%</span>{{/if}}Rp {{transprice price}}</p>
                </div>
            </li>
            {{/each}}
        </ul>
        <div class="order-info">
            <p class="clearfix"><span class="fr">Rp {{transprice data.order.express_fee}}</span>{{lang.H5_SHIPPING_COST}}:</p>
            <p class="clearfix"><span class="fr">Rp {{transprice data.order.total_price}}</span>{{lang.H5_ORDER_TOTAL_PRICE}}:</p>
        </div>
        <div class="shop-info clearfix">
            <img src="{{data.order.shop_info.logo}}">
            <p>{{data.order.shop_info.name}}</p>
        </div>
        <div class="href-box clearfix">
            <a href="{{host}}s/{{data.order.shop_info.id}}" class="go-home">
                <div class="clearfix">
                    <i class="icon iconfont icon-shop-font"></i>
                    {{lang.H5_ENTER_THE_SHOP}}
                </div>
            </a>
            <a href="tel:{{data.order.shop_info.telephone}}" class="contact-user fr">
                <div class="clearfix">
                    <i class="icon iconfont icon-phone-font"></i>
                    {{lang.H5_CONNACT_SELLER}}
                </div>
            </a>
        </div>
    </div>
</section>