<nav class="header-nav clearfix ">
    {{#if detail}}
        <i class="icon iconfont j_go_back icon-back-font"></i>
    {{else}}

        <i class="icon iconfont fr icon-allright-font j_go_back"></i>
    {{/if}}

    Informasi Pembayaran
