<section class="order-box">
    <p class="order-info clearfix">
        <!--<span class="fr j_total"></span>-->
        Jumlah Total
    </p>
    <p class="total-price j_total">
        {{totalPrice}}
    </p>
    <p class="order-content">
        Mohon transfer sesuai jumlah yang tertera (termasuk 3 digit terakhir)
    </p>
</section>
<section class="pay-info">
        {{#eq num 3}}
        <ul class="clearfix three_info">
        {{else}}
        <ul class="clearfix two_act_info">
        {{/eq}}
        {{#if banksInfo.BCA}}
            <li class="tag act j_tag_li" data-tag="bca">
                <p class="bank-info bca">
                    <img src="{{host.imgUrl}}/app/bca.png"/>
                </p>
            </li>
        {{/if}}
        {{#if banksInfo.Mandiri}}
        <li class="tag j_tag_li" data-tag="mandiri">
            <p class="bank-info mandiri">
                <img class="" src="{{host.imgUrl}}/app/mandiri.png"/>
            </p>
        </li>
        {{/if}}

        {{#if banksInfo.BRI}}
        <li class="tag j_tag_li" data-tag="bri">
            <p class="bank-info bri">
                <img src="{{host.imgUrl}}/app/bri.png"/>
            </p>
        </li>
        {{/if}}
    </ul>
    <div class="txt-box">
        <p class="pay-content j_tag j_tag_bca ">
