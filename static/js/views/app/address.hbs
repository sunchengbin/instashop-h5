<div class="address-wraper">
    <section class="address-form-box">
        <nav class="header-nav clearfix" data-spider="header-nav">
            <button class="fr j_save_address" >{{lang.H5_DONE}}</button>
            <i class="icon iconfont j_go_back icon-back-font"></i>
            {{lang.H5_SHIPPING_ADDRESS}}
        </nav>
        <section class="address-wraper">
            <div class="user-info">
                <div class="user-name info-box b-bottom">
                    <input class="j_name" type="text" value="{{name}}" placeholder="{{lang.H5_USER_NAME_PH}}"/>
                </div>
                <div class="user-tel info-box b-bottom">
                    <span>+62</span>
                    <input class="j_tel" type="tel" value="{{telephone}}" placeholder="{{lang.H5_USER_TELE_PH}}" maxlength="20"/>
                </div>
            </div>
            <div class="tel-msg-txt b-bottom">
                {{lang.H5_CONFIRM_TEL_IS_TRUE}}
            </div>
            <div class="user-address j_user_address">
                <div class="info-box act clearfix b-bottom" data-name="province">
                    <i class="icon iconfont fr icon-go-font"></i>
                    <p class="j_province">{{#if address.province}}{{address.province}}{{else}}{{lang.H5_PROVINCE}}{{/if}}</p>
                </div>
                <div class="info-box {{#if address.city}}act{{/if}} b-bottom clearfix" data-name="city">
                    <i class="icon iconfont fr icon-go-font"></i>
                    <p class="j_city">{{#if address.city}}{{address.city}}{{else}}{{lang.H5_CITY}}{{/if}}</p>
                </div>
                <div class="info-box {{#if address.country}}act{{/if}} b-bottom clearfix" data-name="country">
                    <i class="icon iconfont fr icon-go-font"></i>
                    <p class="j_country">{{#if address.country}}{{address.country}}{{else}}{{lang.H5_DISTRICT}}{{/if}}</p>
                </div>
                <div class="info-box-address clearfix">
                    <textarea class="j_street" maxlength="400" placeholder="{{lang.H5_DETAIL_ADDRESS}}">{{#if address.street}}{{address.street}}{{/if}}</textarea>
                </div>
                <div class="info-box b-top clearfix">
                    <input class="j_post" type="text" maxlength="10" value="{{address.post}}" placeholder="{{lang.H5_ADVICE_FILL}}"/>
                </div>
                <div class="info-box b-top set-default-box clearfix">
                    设为默认

                    {{#eq flag 1}}
                        <label flex="cross:center"><input class="mui-switch mui-switch-anim j_set_default" type="checkbox"></label>
                    {{else}}
                        <label flex="cross:center"><input class="mui-switch mui-switch-anim j_set_default" checked type="checkbox"></label>
                    {{/eq}}

                </div>
            </div>
        </section>
    </section>
    <section class="address-list-box j_address_list_box">
        <nav class="header-nav address-header-nav j_address_header clearfix">
            <i class="icon iconfont j_go_address icon-back-font"></i>
            {{lang.H5_SHIPPING_ADDRESS}}
        </nav>
        <section class="address-list j_address_list">
            <div class="list-box j_list_box">

            </div>
        </section>
    </section>
</div>

